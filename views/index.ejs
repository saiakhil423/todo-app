<%- include("partials/header") %>
<div class="table-container">
    <h2 class="todo-title">TODO LIST</h2>

    <div>
        <a class="btn" href="/add-todo">Add Todo</a>
    </div>

    <table>
        <tr>
            <th>Title</th>
            <th>Desc</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Action</th>
        </tr>

        <% for (let i = 0; i < todos.length; i++) { %>
        <tr>
            <td><%= todos[i].title %></td>
            <td><%= todos[i].desc || "No Description" %></td>
            <td><%= todos[i].createdAt %></td>
            <td><%= todos[i].updatedAt %></td>
            <td>
                <a class="btn" href="/update-todo?id=<%= todos[i]._id %>">Edit</a>
                <a class="btn" href="/delete-todo?id=<%= todos[i]._id %>">Delete</a>
            </td>
        </tr>
        <% } %>

    </table>
</div>
<%- include("partials/footer") %>
